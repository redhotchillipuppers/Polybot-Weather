# Polymarket Weather Bot Configuration

# Wallet private key for Polymarket CLOB client
PRIVATE_KEY=your_ethereum_private_key_here

# OpenWeather API key (for weather monitor)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# =============================================================================
# Elon Tweet Monitor Configuration
# =============================================================================

# X API Bearer Token (required for tweet tracking)
# Get from: https://developer.x.com/en/portal/dashboard
X_API_BEARER_TOKEN=your_x_api_bearer_token_here

# Polymarket check interval in minutes (optional, default: 10)
ELON_POLYMARKET_CHECK_INTERVAL=10

# X API check times in UTC, comma-separated HH:MM format (optional)
# Default: 09:00,15:00,21:00
ELON_X_API_CHECK_TIMES=09:00,15:00,21:00

# Data directory for logs (optional, default: ./elon_tweets_data)
ELON_DATA_DIRECTORY=./elon_tweets_data
